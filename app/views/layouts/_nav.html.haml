%nav.top-bar
  %ul.title-area
    / Title Area
    %li.name
      %h1
        %a{:href => "#"} AlrightValentine
    / Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone
    %li.toggle-topbar.menu-icon
      %a{:href => "#"}
        %span Menu
  %section.top-bar-section
    / Left Nav Section
    %ul.left
    / Right Nav Section
    %ul.right
      %li.divider.hide-for-small
      -if @current_user.nil?
        %li= link_to("Sign Up", new_user_path, :remote => true)
        %li.divider.hide-for-small
        %li= link_to("Login", login_path, :remote => true)
      -else
        %li= link_to(@current_user.email, user_path(@current_user.id))
        %li.divider.hide-for-small
        %li= link_to("Log Out", logout_path, :method => "delete")
